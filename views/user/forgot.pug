doctype html
html
	head
		title CBG Admin
		link(rel='stylesheet', href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css")
		link(rel='stylesheet', href='/stylesheets/style.css')
		script(src='https://use.fontawesome.com/a3a71a0323.js')
		script(src='/javascripts/jquery/jquery.js')
		script(src='/javascripts/jquery/login.js')
		script(src='/javascripts/jquery/bootstrap.js')
		script(src='/javascripts/jquery/cookies.js')
		script(src='/javascripts/jquery/application.js')
	body
	block content
	.fluid-container
		.row
			.col-lg-12.col-md-12.register_heading
				img(src="/images/logo.png" style="width:200px")
				h4 Welcome to CBG Admin Portal
		.row
			.col-lg-8.col-md-8.register_form
				h5 Forgot Password
				if(messages)
					include errors
				form(action='/user/forgotpwd', method='post', novalidate)
					.form-group
						label(for='email') Email
						input.form-control.login_input(name='email', value=email, autofocus)
					.form-group
						input.btn.btn-primary.btn-lg.login_button(type='submit', value='Reset Password')
		.row
				.col-lg-12/col-md-12.footer
					p IRS 501(C’)(3) Organization © CBG Foundation 2017-18 - All rights reserved